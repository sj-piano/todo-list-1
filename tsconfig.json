{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./build",
    "paths": {
      "#root/*": ["*"],
      "#lib/*": ["lib/*"],
      "#src/*": ["src/*"],
      "#typechain-types/*": ["typechain-types/*"],
    },
    "resolveJsonModule": true,
    "rootDir": "./",
    "sourceMap": true,
    "target": "es2022"
  },
  "include": [
    "./*.ts",
    "./lib/**/*",
    "./scripts/**/*",
    "./src/**/*",
    "./test/**/*",
    "./typechain-types/**/*",
  ],
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
